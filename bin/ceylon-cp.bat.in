set "MINIMAL_CP=%MINIMAL_CP%;%CEYLON_HOME%\lib\jandex-1.0.3.Final.jar"
set "MINIMAL_CP=%MINIMAL_CP%;%CEYLON_HOME%\lib\txtmark-0.8-f17d7e2193.jar"
