<project name="ceylon-compile Ant Task test" >
  <target name="-init">
      <echo message="ant.home: ${ant.home}"/>
      <echo message="ant.file: ${ant.file}"/>
      <echo message="src: ${arg.src}"/>
      <echo message="out: ${arg.out}"/>
    </target>
  
  <target name="ant-tasks" depends="-init">
    <typedef resource="com/redhat/ceylon/ant/antlib.xml"/>
  </target>
  
  <target name="no-module-or-files" depends="ant-tasks">
    <ceylon-compile
      executable="${script.ceylon}"
      src="${arg.src}"
      out="${arg.out}"
      verbose="${arg.verbose}">
    </ceylon-compile>
  </target>
  
  <target name="foo-alone" depends="ant-tasks">
    <ceylon-compile
    	executable="${script.ceylon}"
      src="${arg.src}"
      out="${arg.out}"
      verbose="${arg.verbose}">
        <module name="com.example.foo"/>
    </ceylon-compile>
  </target>

  <target name="non-existant-module" depends="ant-tasks">
    <ceylon-compile
        executable="${script.ceylon}"
      src="${arg.src}"
      out="${arg.out}"
      verbose="${arg.verbose}">
        <module name="does not exist"/>
    </ceylon-compile>
  </target>
	  
  <target name="default-module" depends="ant-tasks">
    <ceylon-compile
        executable="${script.ceylon}"
      src="${arg.src}/def"
      out="${arg.out}"
      verbose="${arg.verbose}">
        <module name="default"/>
    </ceylon-compile>
  </target>

  <target name="foo-file" depends="ant-tasks,foo-alone">
    <ceylon-compile
    	executable="${script.ceylon}"
      src="${arg.src}"
      out="${arg.out}"
      nomtimecheck="true"
      verbose="${arg.verbose}">
        <files>
          <include name="com/example/foo/a/foo.ceylon"/>
        </files>
    </ceylon-compile>
  </target>
  
  <target name="foo-file-mtime" depends="ant-tasks,foo-alone">
      <ceylon-compile
      	executable="${script.ceylon}"
        src="${arg.src}"
        out="${arg.out}"
        verbose="${arg.verbose}">
          <files>
            <include name="com/example/foo/a/foo.ceylon"/>
          </files>
      </ceylon-compile>
    </target>

  <target name="bar-alone" depends="ant-tasks">
    <ceylon-compile
    	executable="${script.ceylon}"
      src="${arg.src}"
      out="${arg.out}">
       <module name="com.example.bar"/>
    </ceylon-compile>
  </target>
  
  <target name="foo-and-file-from-bar" depends="ant-tasks">
      <ceylon-compile
      	executable="${script.ceylon}"
        src="${arg.src}"
        out="${arg.out}"
        nomtimecheck="true"
        verbose="${arg.verbose}">
          <module name="com.example.foo"/>
          <files>
            <include name="com/example/bar/b/bar.ceylon"/>
          </files>
      </ceylon-compile>
    </target>

  <target name="foo-and-bar" depends="ant-tasks">
    <ceylon-compile
    	executable="${script.ceylon}"
      src="${arg.src}"
      out="${arg.out}">
       <module name="com.example.foo"/>
       <module name="com.example.bar"/>
    </ceylon-compile>
  </target>
  
  <target name="bad-fail-on-error" depends="ant-tasks">
    <ceylon-compile
    	executable="${script.ceylon}"
      src="${arg.src}"
      out="${arg.out}"
      verbose="${arg.verbose}"
      failonerror="false"
      errorproperty="continued">
        <module name="com.example.bad"/>
    </ceylon-compile>
    <echo message="I'll carry on regardless"/>
    <echo message="continued: ${continued}"/>
  </target>

</project>